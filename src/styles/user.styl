.container{
    width: 100%;
    height: 100%;
    padding: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #17EAD1;
    position: relative;
}

.image-box{
    width: 30%;
    height: 70%;
    border: 5px solid black;
    border-radius: 10px;
    overflow: hidden;
}

.title-part-learn{
    width: 100%;
    height: 10%;
    background-color: grey;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
}

.img-style-learn{
    width: 100%;
    height: 90%;
}

.quiz-box{
    width: 30%;
    height: 70%;
    border: 5px solid black;
    border-radius: 10px;
    overflow: hidden;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
}